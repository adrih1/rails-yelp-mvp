<div class="container">
  <div class="header">
    <h1>Restaurants</h1>
    <%= link_to "New restaurant", new_restaurant_path %>
  </div>

  <div id="restaurants">
    <% @restaurants.each do |restaurant| %>
      <%= render restaurant %>
      <p>
        <%= link_to "Show this restaurant", restaurant %>
      </p>
    <% end %>
  </div>
</div>
